{# https://adminlte.io/themes/AdminLTE/index2.html #}
    <aside class="main-sidebar"> 
        <section class="sidebar" style="height:auto;">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="user-panel">

                    <div class="pull-left info">
                    <p>{{ app.user.username }}</p>
                    </div> 
                </div>
            {% endif %}
            <ul class="sidebar-menu tree" data-widget="tree">
                <li class="header">MAIN NAVIGATION</li>
                <li class="treeview" class="{% if app.request.attributes.get('_route') == 'back' %}active{% endif %}">
                    <a href="{{ url('back') }}">Avisos</a>
                </li>
                <li class="treeview" class="{% if app.request.attributes.get('_route') == 'back_subir_pdf' %}active{% endif %}">
                    <a href="{{ url('back_subir_pdf') }}">Subir PDF</a>
                </li>
                 <li class="treeview">
                    <a href="{{ url('salir') }}">Salir</a>
                </li>
            </ul>
        </section>
    </aside>